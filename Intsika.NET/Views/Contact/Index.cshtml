<h2 class="h1 text-capitalize main-heading w-100 text-center brown pt-5">Reach Out To Us</h2>
<div class="curve-teal w-90 px-5 mx-auto"></div>
<div class="container mb-5 mt-5 px-2">
    <div class="row borderBrown-sm">
        <div class="col-sm-6">
            <div class="container pt-4" id="contact">
                <form id="contactform" method="post" action="SendEmail"
                      enctype="application/x-www-form-urlencoded">
                    <div class="col column-border2  styleContact">
                        <center>
                            <div class="row px-2 text-left main">
                                <div class="col mt-5 ">
                                    <label class="brown">First name:</label><br>
                                    <input class="form-control styleContact inputFields" type="text" name="FirstName" placeholder="FirstName" required>
                                </div>
                                <div class="col mt-5 ">
                                    <label class="brown">Last name:</label><br>
                                    <input class="form-control main inputFields" type="text" name="LastName" placeholder="LastName" required>
                                </div>
                            </div>
                            <div class="row px-2 mt-3 text-left">
                                <div class="col ">
                                    <label class="brown">Email:</label><br>
                                    <input class="form-control main inputFields" type="email" name="Email" placeholder="Email" required>
                                </div>
                                <div class="col ">
                                    <label class="brown">Contact:</label><br>
                                    <input class="form-control main inputFields" type="tel" pattern="[0-9]{3} [0-9]{3} [0-9]{4}" maxlength="12" title="Ten digits code" name="Contact" placeholder="082 000 000" onkeypress="phoneMask()" required>
                                </div>
                            </div>
                        </center>
                        <div class="text-left pt-5">
                            <label class="font-weight-bold setFontColorBrown">Message:</label>
                            <textarea class="form-control inputFields px-2 py-4 m-0 text-left" style="width:100%; height:125px;" name="Message" placeholder="Message..." required></textarea>
                        </div>

                        <div class="w-100 p-0 d-flex justify-content-end">
                            <button class="btn btnSuccess mt-3 mb-5 px-5 w-25" type="submit" value="Send">Send</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-6 ">
            <div class="row borderBrown-sm ">
                <div class="col-sm-4 middle bgBrown  p-2">
                    <img class="img-fluid" src="~/Content/Images/Contact/contact.png" />
                </div>
                <div class="col-sm-8 middle p-2">
                    <p class="text-center responsive-padding h5 main">
                        Email: intsikacp@gmail.com
                        Contact No (w): 041 379 2950
                        Contact No (c): 072 803 6145
                    </p>
                </div>
            </div>
            <div class="row borderBrown-sm ">
                <div class="col-sm-4 bgTeal p-2">
                    <img class="img-fluid" src="~/Content/Images/Contact/op hours.png" />
                </div>
